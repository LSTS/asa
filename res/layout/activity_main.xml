<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.lsts.asa.activities.MainActivity" >

    <Button
        android:id="@+id/buttonPfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonManualStabilized"
        android:layout_below="@+id/buttonManualStabilized"
        android:text="PFD" />

    <Button
        android:id="@+id/buttonSettingsCheckList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonPfd"
        android:layout_below="@+id/buttonPfd"
        android:text="Settings/Checklist" />

    <Button
        android:id="@+id/buttonTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSettingsCheckList"
        android:layout_below="@+id/buttonSettingsCheckList"
        android:text="Test" />

    <Button
        android:id="@+id/buttonTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTest"
        android:layout_below="@+id/buttonTest"
        android:text="Test 2" />

    <Button
        android:id="@+id/buttonChooseActiveSys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Choose Active System" />

    <Button
        android:id="@+id/buttonManualStabilized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonChooseActiveSys"
        android:text="Manual/Stabilized" />

</RelativeLayout>
